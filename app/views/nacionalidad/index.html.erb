<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">Nacionalidades</div>

                <div class="card-body">
                   
                    <%= render 'layouts/messages' %>

                    <div>
                        <table class="table table-stripped">

                        <% if @nacionalidades %>
                            <table class="table table-stripped">
                                <thead>
                                    <tr>
                                        <th>Nombre</th>
                                        <th>Caracteristica</th>
                                        <th style="width: 100px" ></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% @nacionalidades.each do |nacionalidad| %>
                                        <tr>
                                            <td> <%= nacionalidad.nombre %> </td> 
                                            <td> <%= nacionalidad.caracteristica %></td> 
                                            <td>
                                                <%= link_to 'Ver nombres', nombres_nacionalidad_path_url(nacionalidad.id) , class: "btn btn-primary" %>
                                            </td>
                                        </tr>
                                    <% end %>
                                </tbody>
                            </table>
                        <% end %>                    	
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>